@model IEnumerable<Customer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
}

<h1>Customer List</h1>
<div class="container p-1">
    <div class="col-6">
    <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">
        Create New Customer
    </a>
    </div>
</div>


<table class="table table-border table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Address
            </th>
            <th>
                IsActive
            </th>
            <th>
                Created Date
            </th>
            <th>
                Updated Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.FirstName @obj.LastName
                </td>
                <td>
                    @obj.Email
                </td>
                <td>
                    @obj.Address
                </td>
                <td>
                    @obj.IsActive
                </td>
                <td>
                    @obj.CreatedAt
                </td>
                <td>
                    @obj.UpdatedAt
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Customer" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>